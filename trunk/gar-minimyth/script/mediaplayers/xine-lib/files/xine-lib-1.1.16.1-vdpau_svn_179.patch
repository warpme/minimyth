+#define _ISOC9X_SOURCE
+#include <math.h>
+])
+AC_CHECK_DECL(rintf,[
+	AC_DEFINE(HAVE_RINTF,1,[Define this if the 'rintf' function is declared in math.h])
+      ],,[
+#include <math.h>
+])
+
